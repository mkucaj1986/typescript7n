{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "config",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "postcss.config.js",
    "src/setupTests.ts"
  ],
  "paths": {
    "components/*": ["src/components/*"],
    "store/*": ["src/store/*"],
    "types/*": ["src/types/*"],
    "axiosinstance/*": ["src/axiosinstance/*"],
    "assets/*": ["src/assets/*"],
    "interfaces/*": ["src/interfaces/*"]
  }
}
